#!/bin/sh
cont=$(docker ps | awk '/show-me/{print $1}')

if [[ "$1" == "kill" ]]; then
  if [[ ! -z $cont ]]; then
    docker kill $cont
  fi
  exit 0
fi


if [[ -z $cont ]]; then
  cont=$(docker run --rm -p 5555:8080 -d jonasbak/show-me:latest)
  sleep 1
fi

url="http://localhost:5555"
curl -X POST --data-binary "@./$1" "$url" && echo "$url"
# Maybe do something like:
# docker cp $1 "$cont:/app/in"
